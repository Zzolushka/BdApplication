@model BDApplication.Models.Sketch

@{
    ViewBag.Title = "ShowSketchPage";
}

<h2>Имя рисунка: @Model.SketchName</h2>
<hr />
<div class="card bg-light">
    <img class="card-img-bottom" src="https://wallpapercave.com/wp/wp2260439.jpg" />
    <div class="card-body">
        <h4 class="card-title">Light card title</h4>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content</p>
    </div>
</div>
<hr />

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.signalR-2.4.0.min.js"></script>
<script src="~/signalr/hubs"></script>
<script>
    var chat = $.connection.sketchPageHubs;
    $.connection.hub.start().done(function () {
    });

</script>

<textarea class="form-control"></textarea>
<button onclick="chat.server.sendCommnet('gaf',@Model.SketchId,@Model.UserId)" class="btn btn-success">
    submit
</button>
<div id="comments">
    @foreach (var comment in Model.Comments)
    {   
        <blockquote class="blockquote">
            <p class="mb-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
            <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
        </blockquote>
    }
</div>