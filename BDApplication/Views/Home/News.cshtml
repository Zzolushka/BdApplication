@model IEnumerable<BDApplication.Models.Sketch>

@{
    ViewBag.Title = "News";
}
<form method="post">
    <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

            <h1 class="my-4">
                Лента новостей
            </h1>

            @foreach (var item in Model)
            {
                <!-- Blog Post -->
                <div class="card mb-4">
                    <h3 class="card-header ">@item.SketchName</h3>
                    <img class="card-img-top" src="@item.SketchPhoto" alt="Card image cap">
                    <div class="card-body">
                        @Html.ActionLink("Просмотреть запись", "ShowSketchPage", "Sketch", new { item.SketchId }, new { @class = "card-link" })
                    </div>
                    <div class="card-footer text-muted">
                        Дата
                    </div>
                </div>
            }

            <!-- Blog Post -->
            <!-- Pagination -->
            <ul class="pagination justify-content-center mb-4">
                <li class="page-item">
                    <a class="page-link" href="#">&larr; Предыдущая</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" href="#">Следующая &rarr;</a>
                </li>
            </ul>

        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">


            <!-- Search Widget -->
            <div class="card my-4">
                <h5 class="card-header">Поиск</h5>
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Введите че-нить" id="searchtext" name="searchtext">
                        <span class="input-group-btn">
                            <input class="btn btn-secondary" type="submit" value="Искать" />
                        </span>
                    </div>
                </div>
            </div>
            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Категории</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">Портреты</a>
                                </li>
                                <li>
                                    <a href="#">Арты</a>
                                </li>
                                <li>
                                    <a href="#">Природа</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">...</a>
                                </li>
                                <li>
                                    <a href="#">...</a>
                                </li>
                                <li>
                                    <a href="#">...</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Side Widget -->
            <div class="card my-4">
                <h5 class="card-header">Реклама</h5>
                <div class="card-body">
                   Тута реклама
                </div>
            </div>

        </div>

    </div>
</form>